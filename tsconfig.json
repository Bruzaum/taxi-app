{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["esnext", "es2022", "dom"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src", "/*.ts"],
  "exclude": ["node_modules"]
}
